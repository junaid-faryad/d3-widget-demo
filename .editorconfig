root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

[*.{json,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.gitignore]
trim_trailing_whitespace = false
insert_final_newline = false
